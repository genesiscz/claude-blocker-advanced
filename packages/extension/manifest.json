{
  "manifest_version": 3,
  "name": "Claude Blocker Advanced",
  "version": "0.1.0",
  "description": "Block distracting websites unless Claude Code is actively running inference (fork of Theo's claude-blocker)",
  "homepage_url": "https://github.com/genesiscz/claude-blocker",
  "minimum_chrome_version": "116",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["storage", "tabs", "notifications", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.global.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.global.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude Blocker Advanced",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
