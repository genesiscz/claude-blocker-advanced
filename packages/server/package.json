{
  "name": "claude-blocker-advanced",
  "version": "1.0.1",
  "description": "Block distracting websites unless Claude Code is actively running inference. Fork of Theo's claude-blocker with advanced features.",
  "author": "Martin Krizan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/genesiscz/claude-blocker-advanced.git"
  },
  "homepage": "https://github.com/genesiscz/claude-blocker-advanced",
  "bugs": {
    "url": "https://github.com/genesiscz/claude-blocker-advanced/issues"
  },
  "type": "module",
  "bin": {
    "claude-blocker-advanced": "dist/bin.js"
  },
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/bin.ts src/server.ts --format esm --dts --clean",
    "dev": "tsx src/bin.ts",
    "setup": "tsx src/bin.ts --setup",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@claude-blocker-advanced/shared": "workspace:*",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "claude",
    "claude-code",
    "productivity",
    "blocker",
    "focus",
    "distraction"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
